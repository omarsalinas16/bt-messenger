<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_16dp"
    android:layout_marginStart="@dimen/margin_18dp"
    android:layout_marginEnd="@dimen/margin_18dp"
    android:layout_gravity="end"
    android:gravity="end"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_message_timestamp_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_marginBottom="@dimen/margin_5dp"
        android:textSize="@dimen/small_text"
        tools:text="Mon 9 Jan 2018, 00:00"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_5dp"
        android:paddingBottom="@dimen/margin_5dp"
        android:paddingStart="@dimen/margin_10dp"
        android:paddingEnd="@dimen/margin_10dp"
        android:background="@drawable/background_rounded"
        android:backgroundTint="@color/colorAccent"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_message_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            tools:text="Myself"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/item_message_content_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="280dp"
            android:gravity="end"
            tools:text="This is a sample message. This is a sample message. This is a sample message. This is a sample message."/>

    </LinearLayout>

</LinearLayout>
